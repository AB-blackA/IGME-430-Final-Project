<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Login</title>
  <link rel="shortcut icon" href="/assets/img/favicon.png" />
  <link rel="stylesheet" type="text/css" href="/assets/style.css" />
</head>

<body>
  <nav><a href="/main"><img id="logo" src="/assets/img/logo.png" alt="logo (thread and needle)" /></a>
    <div class="navlink"><a href="/login">Login</a></div>
    <div class="navlink"><a href="/signup">Sign up</a></div>
  </nav>
  <section id="login">
    <form id="loginForm" name="loginForm" action="/login" method="POST" class="mainForm">
      <label for="username">Username: </label>
      <input id="user" type="text" name="username" placeholder="username" />
      <label for="pass">Password: </label>
      <input id="pass" type="password" name="pass" placeholder="password" />
      <input class="formSubmit" type="submit" value="Sign In" />
    </form>
  </section>
  <script src="/assets/bundle.js"></script>
</body>

</html>